{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    ":rocket: merge it!"
  ],
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
